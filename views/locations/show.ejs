<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/locations/show.css">
<%- include('../partials/nav') %>



<h1>The Travel Journal</h1>

<div class="location-container">

  <div class="location-card">
    <h2> <%= location.name %></h2>
    <img src="<%= location.photo %>" alt="location image">
    <p> <%= location.content %></p>

    <div class="button-container">
      <% if (location.author._id.equals(user.profile._id)) { %>
        <form action="/locations/<%= post._id %>?_method=DELETE" method="POST">
          <button class="delete-button">Delete 🗑️</button>
        </form>
      <% } %>
    </div>

  </div>
</div>



<%- include('../partials/footer') %>