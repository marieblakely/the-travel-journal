<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/locations/new.css">
<%- include('../partials/nav') %>

<div class="form-container">
  <main>
  <h1><%= title %></h1>
<div class="form-card">
  <form action="/locations" method="POST">
    <img id="avatar" src="<%= user.profile.avatar %>"/><br><br>
    <label for="location-input">Location:</label>
    <input type="text" name="name"><br><br>
    <label for="photo-input">Photo:</label>
    <input type="text" name="photo" placeholder="Paste image url here"><br><br>
    <div class="content-input">
      <label for="content-input">Tell us about your time there:</label><br>
      <textarea name="content" id="" cols="30" rows="2" placeholder="Tell us about your time there!"></textarea><br><br>
    </div>
    <button type="submit">Add Location</button> 
  </form>
</div>
  </main>
</div>

<%- include('../partials/footer') %>

