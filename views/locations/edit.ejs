<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/locations/edit.css">
<%- include('../partials/nav') %>




<div class="edit-location-container">
  <section>
    <div class="edit-location-card">
      <h1>Edit the Location!</h1>
      <form action="/locations/<%= location._id %>?_method=PUT" method="POST">
        <label>
          Name: 
          <input 
            type="text"
            name="name" 
            value="<%= location.name %>" 
            autocomplete="off"
          >
        </label>
          <label for="content-input">Tell us about your time there:</label><br>
        <textarea name="content" id="" cols="30" rows="2"><%= location.content %></textarea>
        <button class="edit-location-btn" type="submit">Update this location!</button>
      </form>
    </div>
  </section>
</div>




